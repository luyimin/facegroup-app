div class="row" style="vertical-align: bottom;"
  div class="col-xs-9"
    h3 All Groups
  div class="col-xs-3"
    button{ 
      name="new_group"
      type="button" 
      class="btn btn-success" 
      data-toggle="modal" 
      data-target="#newGroupModal" 
    } + New Group 
    
table class="table"
  thead
    tr
      th Group Name
      th Facebook Link
  tbody
    - @data&.groups&.each do |group|
      tr class="groups_row"
        td 
          span class="group_name"
            a href="/groups/#{group[:id]}" #{group[:name]}
        td 
          span class="group_url"
            a href="#{group[:fb_url]}" #{group[:fb_url]}

include :group_new_modal_partial
